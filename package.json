{
  "name": "omp-config",
  "version": "1.0.0",
  "description": "Modular Oh My Posh configuration and merger",
  "type": "module",
  "packageManager": "yarn@4.8.1",
  "main": "./bin/run.js",
  "bin": {
    "omp": "./bin/run.js"
  },
  "oclif": {
    "bin": "omp",
    "dirname": "omp-config",
    "commands": "./src/commands",
    "plugins": [
      "@oclif/plugin-autocomplete"
    ],
    "topicSeparator": " ",
    "additionalHelpFlags": [
      "-h"
    ],
    "additionalVersionFlags": [
      "-v"
    ]
  },
  "scripts": {
    "build": "yarn omp:build",
    "omp:build": "./bin/dev.js build",
    "omp:build:full": "./bin/dev.js build full",
    "omp:build:minimal": "./bin/dev.js build minimal",
    "omp:variants": "./bin/dev.js variants",
    "watch": "chokidar \"config/**/*.yml\" \"config/**/*.yaml\" -c \"yarn omp:build\"",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"config/**/*.{yml,yaml}\"",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "chokidar": "^4.0.3",
    "chokidar-cli": "^3.0.0",
    "deepmerge": "^4.3.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-yml": "^1.18.0",
    "glob": "^11.0.3",
    "prettier": "^3.5.3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "yaml": "^2.8.0"
  },
  "dependencies": {
    "@oclif/core": "^4.4.0",
    "@oclif/plugin-autocomplete": "^3.2.30",
    "listr2": "^8.3.3",
    "ts-node": "^10.9.2"
  }
}
